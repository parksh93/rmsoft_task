<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.subscribe.task.repository.MemberRepository">
    <select id="findAll" resultType="com.subscribe.task.dto.FindMemberDTO">
        SELECT * FROM members
    </select>
    <insert id="save" parameterType="com.subscribe.task.dto.SaveDTO">
        INSERT INTO members VALUES (null, #{loginId}, #{password}, #{name}, #{phoneNumber}, #{email}, #{address})
    </insert>
    <select id="findPasswordByLoginId" parameterType="string" resultType="string">
         SELECT password FROM members WHERE login_id = #{loginId}
    </select>
</mapper>